var React = require('react');

var TileActions = require('../actions/TileActions.js');

var Shuffle = React.createClass({
  render: function () {
    return (
      <button onClick={this._onClick}>
        Shuffle
      </button>
    );
  },

  _onClick: function () {
    TileActions.shuffle();
  }
});

module.exports = Shuffle;
